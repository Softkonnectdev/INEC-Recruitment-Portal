@model Recruitment_Portal_System.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
}

<div class="bucket">


    <div class="row">
        <div class="col">
            <section class="ftco-section">
                <div class="container">

                    <div class="row justify-content-center">
                        <div class="col-md-7 col-lg-7">
                            <div class="login-wrap">
                                <div class="img" style="background-image: url(/Images/esutlogo.png);"></div>
                                <h3 class="text-center mb-4">Student Sign Up</h3>
                                @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post))
                                {


                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.AntiForgeryToken()

                                    @Html.HiddenFor(model => model.Code)

                                    <div class="form-group mb-3">
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "someone@mail.com" })
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group mb-3">
                                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", placeholder = "Combination of [(@,#,$,+),(A-Za-z),(0-9)]" } })
                                        <span toggle="#Password" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group mb-3">
                                        @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", placeholder = "Confirm Password", id = "passwordConfirm-field" } })
                                        <span toggle="#passwordConfirm-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                                        @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group">
                                        <button type="submit" class="form-control btn btn-primary submit px-3">Reset Password</button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>

    </div>
</div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.js"></script>
