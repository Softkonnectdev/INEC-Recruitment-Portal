@model Recruitment_Portal_System.Models.UploadCVViewModel

@{
    ViewBag.Title = "Upload CV";
}

@if (ViewBag.Msg != null)
{
    <p id="msg" style="display:none">@ViewBag.Msg</p>
}

<div class="row">
    <div class="col">
        <section class="ftco-section" style="padding-top:0px; padding-bottom: 2px;">
            <div class="row justify-content-center">
                <div class="login-wrap">
                    <div class="img" style="background-image: url(/Images/company3.jpg);"></div>
                    <h3 class="text-center mb-4">
                        <span>Upload Curriculum Vitae</span>

                    </h3>

                    @using (Html.BeginForm("UploadCV", "Applicant", FormMethod.Post, new
                    { enctype = "multipart/form-data", @id = "frmCV" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="form-group mb-3">
                                @Html.LabelFor(model => model.CVUpload, htmlAttributes: new { @class = "control-label col-md-2" })
                                <input type="file" required id="CVUpload" name="CVUpload" class="form-control" />
                                @Html.ValidationMessageFor(model => model.CVUpload, "", new { @class = "text-danger" })
                            </div>


                            <div class="form-group mb-3">
                                @Html.LabelFor(model => model.CoverPage, htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.EditorFor(model => model.CoverPage, new { htmlAttributes = new { @class = "form-control", placeholder = "Please enter detail cover page", required = "required" } })
                                @Html.ValidationMessageFor(model => model.CoverPage, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group mt-3">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Upload Now" class="btn btn-primary btn-outline-danger" />
                                </div>
                            </div>
                        </div>
                    }


                </div>
            </div>
        </section>
    </div>

</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.js"></script>
<script type="text/javascript">

    $(document).ready(function () {
        var Smsg = $("#msg").text();
        if (Smsg.trim() != "") {
            alert(Smsg);
        }


    })

</script>