

@model Recruitment_Portal_System.Models.ApplicantWorkExperience




<div class="row">
    <div class="col">
        <section class="ftco-section" style="padding-top:0px; padding-bottom: 2px;">
            <div class="row justify-content-center">
                <div class="login-wrap">
                    <div class="img" style="background-image: url(/Images/company3.jpg);"></div>
                    <h3 class="text-center mb-4">
                        @if (Model.Company != null)
                        {<span>Update Work Experience</span>}
                        else
                        { <span>Add Work Experience</span>}
                    </h3>

                    <form id="frmWorkExperience">
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.Id)
                        @Html.HiddenFor(model => model.ApplicantID)
                        <div class="panel">

                            <div class="panel-body">
                                <div class="form-group mb-3">
                                    @Html.TextBoxFor(x => x.Company, new { @class = "form-control", @placeholder = "What is the name of the company you work before?" })
                                    @Html.ValidationMessageFor(model => model.Company, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group mb-3">
                                    @Html.EditorFor(model => model.Position, new { htmlAttributes = new { @class = "form-control", @placeholder = "What was the position you held?" } })
                                    @Html.ValidationMessageFor(model => model.Position, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group mb-3">
                                    @Html.EditorFor(model => model.StartedDate, new { htmlAttributes = new { @class = "form-control", @placeholder = "Date of this employment?" } })
                                    @Html.ValidationMessageFor(model => model.StartedDate, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group mb-3">
                                    @Html.EditorFor(model => model.TerminationDate, new { htmlAttributes = new { @class = "form-control", @placeholder = "Date you left this position?" } })
                                    @Html.ValidationMessageFor(model => model.TerminationDate, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group mb-3">
                                    @Html.EditorFor(model => model.YearsofExperience, new { htmlAttributes = new { @class = "form-control", @placeholder = "How many years did work there?" } })
                                    @Html.ValidationMessageFor(model => model.YearsofExperience, "", new { @class = "text-danger" })
                                </div>


                            </div>
                        </div>



                        <div style="text-align: center;" id="loaderDiv11" class="pt-2">
                            <img src="~/Images/loadingx.gif" width="80" height="80" class="img img-thumbnail" />
                        </div>

                        <div class="d-grid gap-2 col-md-12 mx-auto mt-2">
                            <a href="#" class="btn btn-primary submit fw-bold px-3 fw-bolder" id="btnSaveUpdate">
                                @if (Model.Company != null)
                                {<span>Update Work Experience</span>}
                                else
                                { <span>Save Work Experience</span>}
                            </a>
                        </div>



                    </form>

                </div>
            </div>
        </section>
    </div>

</div>





<script>

    $(document).ready(function () {
        $("#loaderDiv11").hide();

        $("#btnSaveUpdate").click(function () {

            $("#loaderDiv11").show();

            var frmData = $("#frmWorkExperience").serialize();
            var data = frmData;
            debugger;

            $.ajax({
                type: "POST",
                url: "/Applicant/WorkExperience",
                data: data,
                success: function (result) {
                    $("#loaderDiv11").hide();
                    $("#AddEditModal").modal("hide"); //TO HIDE MODAL AFTER SAVING RECORD
                    if (result.trim != "" || result.trim != null) { alert(result); }
                    window.location.href = "/Applicant/WorkExperience";
                }
            })
        })

    })
</script>


